{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "outDir": "src",
    "rootDir": "src",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src/main.ts", "src/types.ts"],
  "exclude": ["node_modules"]
}
