{
  "name": "sudoku-trainer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "build:scss": "sass src/styles.scss dist/styles.css",
    "build:ts": "tsc -p tsconfig.web.json && cp src/main.js dist/main.js",
    "build:html": "cp src/index.html dist/index.html",
    "build:assets": "cp -r src/assets dist/assets 2>/dev/null || true",
    "build:static": "mkdir -p dist && npm run build:scss && npm run build:ts && npm run build:html && npm run build:assets",
    "start:static": "npm run build:static && python3 -m http.server 8080 --bind 0.0.0.0 --directory dist",
    "serve:static": "python3 -m http.server 8080 --bind 0.0.0.0 --directory dist",
    "test": "vitest && playwright test --reporter=dot",
    "test:watch": "vitest --watch",
    "coverage": "vitest --coverage",
    "test:ci": "vitest --run --coverage",
    "test:e2e": "playwright test --reporter=dot",
    "test:e2e:report": "playwright test --reporter=html",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@ngrx/store": "^19.0.0",
    "@ngrx/store-devtools": "^19.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^2.1.2",
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular-eslint/builder": "^21.0.1",
    "@angular-eslint/eslint-plugin": "^21.0.1",
    "@angular-eslint/eslint-plugin-template": "^21.0.1",
    "@angular-eslint/template-parser": "^21.0.1",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^19.0.0",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "start-server-and-test": "^2.1.3",
    "sass": "^1.80.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.13.0",
    "typescript": "~5.7.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "src/**/*.{ts,html}": [
      "eslint --max-warnings=0 --no-warn-ignored"
    ],
    "src/**/*.scss": [
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
